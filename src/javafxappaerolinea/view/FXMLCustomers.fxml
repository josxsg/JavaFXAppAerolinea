<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxappaerolinea.controller.FXMLCustomersController">
   <children>
      <VBox layoutX="0.0" layoutY="0.0" prefHeight="500.0" prefWidth="1024.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" prefHeight="50.0" prefWidth="1024.0" style="-fx-background-color: #f0f0f0;" text="Gestión de Clientes">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <Button fx:id="btnAddCustomer" mnemonicParsing="false" onAction="#handleAddCustomer" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Agregar Cliente" />
                  <Button fx:id="btnExport" mnemonicParsing="false" onAction="#handleExport" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Exportar" />
               </children>
            </HBox>
            <TableView fx:id="tableCustomers" prefHeight="400.0" prefWidth="1024.0" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="columnId" prefWidth="75.0" text="ID" />
                  <TableColumn fx:id="columnName" prefWidth="180.0" text="Nombre" />
                  <TableColumn fx:id="columnLastName" prefWidth="180.0" text="Apellido" />
                  <TableColumn fx:id="columnEmail" prefWidth="200.0" text="Correo" />
                  <TableColumn fx:id="columnPhone" prefWidth="150.0" text="Teléfono" />
                  <TableColumn fx:id="columnAddress" prefWidth="235.0" text="Dirección" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>