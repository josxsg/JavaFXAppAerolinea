<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #F5F6FA;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxappaerolinea.controller.FXMLEditAssistantProfileController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Editar Perfil de Asistente">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            
            <GridPane hgap="15.0" vgap="15.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="ID:" GridPane.rowIndex="0" />
                  <Label fx:id="lbId" text="[ID]" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="Nombre:" GridPane.rowIndex="1" />
                  <TextField fx:id="tfName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Dirección:" GridPane.rowIndex="2" />
                  <TextField fx:id="tfAddress" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  
                  <Label text="Fecha de Nacimiento:" GridPane.rowIndex="3" />
                  <DatePicker fx:id="dpBirthDate" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  
                  <Label text="Género:" GridPane.rowIndex="4" />
                  <ComboBox fx:id="cbGender" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  
                  <Label text="Salario:" GridPane.rowIndex="5" />
                  <TextField fx:id="tfSalary" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  
                  <Label text="Email:" GridPane.rowIndex="6" />
                  <TextField fx:id="tfEmail" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  
                  <Label text="Horas de Asistencia:" GridPane.rowIndex="7" />
                  <TextField fx:id="tfAssistanceHours" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                  
                  <Label text="Número de Idiomas:" GridPane.rowIndex="8" />
                  <TextField fx:id="tfNumberOfLanguages" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                  
                  <Label text="Contraseña:" GridPane.rowIndex="9" />
                  <PasswordField fx:id="pfPassword" promptText="Dejar en blanco para mantener la actual" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                  
                  <Label text="Confirmar Contraseña:" GridPane.rowIndex="10" />
                  <PasswordField fx:id="pfConfirmPassword" promptText="Dejar en blanco para mantener la actual" GridPane.columnIndex="1" GridPane.rowIndex="10" />
               </children>
            </GridPane>
            
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button onAction="#btnCancel" style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-weight: bold;" text="Cancelar" />
                  <Button onAction="#btnSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Guardar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>