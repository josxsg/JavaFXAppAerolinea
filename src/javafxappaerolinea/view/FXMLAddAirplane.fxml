<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1024.0" style="-fx-background-color: #F5F6FA;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxappaerolinea.controller.FXMLAddAirplaneController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Agregar Aviones a Aerolínea">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Aviones Disponibles:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <Button onAction="#btnAdd" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Añadir" />
               </children>
            </HBox>
            <TableView fx:id="tvAvailableAirplanes" prefHeight="200.0">
              <columns>
                <TableColumn fx:id="tcAvailableRegistration" text="Matrícula" />
                <TableColumn fx:id="tcAvailableModel" text="Modelo" />
                <TableColumn fx:id="tcAvailableCapacity" text="Capacidad" />
                <TableColumn fx:id="tcAvailableAge" text="Antigüedad" />
                <TableColumn fx:id="tcAvailableWeight" text="Peso (kg)" />
                <TableColumn fx:id="tcAvailableStatus" text="Estado" />
                <TableColumn fx:id="tcAvailableAirline" text="Aerolínea" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Label text="Aviones Añadidos:">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TableView fx:id="tvAddedAirplanes" prefHeight="200.0">
               <columns>
                  <TableColumn fx:id="tcAddedRegistration" text="Matrícula" />
                  <TableColumn fx:id="tcAddedModel" text="Modelo" />
                  <TableColumn fx:id="tcAddedCapacity" text="Capacidad" />
                  <TableColumn fx:id="tcAddedAge" text="Antigüedad" />
                  <TableColumn fx:id="tcAddedWeight" text="Peso (kg)" />
                  <TableColumn fx:id="tcAddedStatus" text="Estado" />
                  <TableColumn fx:id="tcAddedAirline" text="Aerolínea" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button onAction="#btnRemove" prefWidth="100.0" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Eliminar" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button onAction="#btnSaveChanges" prefWidth="140.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" text="Guardar Cambios" />
                  <Button onAction="#btnCancel" prefWidth="100.0" style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold;" text="Cancelar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
